{
    "compilerOptions": {
        "module": "ES2022",
        "useDefineForClassFields": true,
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable",
            "webworker"
        ],
        "moduleResolution": "bundler",
        "sourceMap": true,
        "allowJs": false,
        "allowImportingTsExtensions": false,
        "strictNullChecks": true,
        "declaration": true,
        "skipLibCheck": true,
        "noEmit": false,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}